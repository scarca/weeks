.center-wrapper,button,table{height:100%}body,html{width:100%;margin:0;padding:0;display:flex;justify-content:center;font-family:'Alegreya Sans',sans-serif}.center-wrapper{display:flex;align-items:center;text-align:center;flex-direction:column;justify-content:center}@media (max-width:520px){.center-wrapper{width:100%}}@media (min-width:520px) and (max-width:780px){.center-wrapper{width:520px}}@media (min-width:780px){.center-wrapper{width:780px}}.main-display-wrapper{height:100%;width:100%}.bday-wrap{margin:auto auto 20px;display:flex;flex-direction:row;flex-wrap:wrap;width:350px;justify-content:center;align-items:center}button,table,tr{width:100%}.radio,label{margin:auto}input[type=date],tr{padding:5px;margin:5px}tr{height:1.1%}td{-webkit-border-radius:10px;-moz-border-radius:10px;border-radius:10px;border:solid;border-width:thin;width:1.9%;position:relative}td:after{content:'';display:block;margin-top:100%}td .week{position:absolute;top:0;bottom:0;left:0;right:0}button{background-color:#eee;-webkit-border-radius:5px;-moz-border-radius:5px;border-radius:5px;border-style:hidden;font-size:20px}p{max-width:768px;text-align:left}.active{background-color:red}input[type=date]{border:none;font-family:inherit;font-size:1.3pc;-webkit-border-bottom:10px;background-color:#eee;border-radius:10px}a{text-decoration:none;color:red}
